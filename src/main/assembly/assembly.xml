<assembly>
  <id>bundle</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <baseDirectory>c++</baseDirectory>
  <fileSets>
    <fileSet>
      <directory>${cmake.rel.build.path}</directory>
      <outputDirectory>/</outputDirectory>
      <fileMode>0754</fileMode>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.build.directory}/${project.versioned.jar.file}</source>
      <outputDirectory>/</outputDirectory>
      <destName>${project.unversioned.jar.file}</destName>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>${project.build.directory}/config.ini</source>
      <outputDirectory>/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>${project.build.directory}/test</source>
      <outputDirectory>/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0754</fileMode>
    </file>
    <file>
      <source>${basedir}/src/main/cpp/APACHE20-LICENSE.txt</source>
      <outputDirectory>/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>${basedir}/src/main/cpp/BSD-LICENSE.txt</source>
      <outputDirectory>/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0644</fileMode>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <excludes>
        <exclude>${project.groupId}:${project.artifactId}:jar:${project.version}</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
